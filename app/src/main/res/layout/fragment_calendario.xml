<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".CalendarioFragment">

    <CalendarView
        android:id="@+id/simpleCalendarView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imagenCarretera"
            android:layout_width="wrap_content"
            android:layout_height="283dp"
            android:contentDescription="@string/imagen_carretera"
            android:src="@drawable/streets_2278471_1280"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/frasePersonal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="@+id/imagenCarretera"
            app:layout_constraintLeft_toLeftOf="@+id/imagenCarretera"
            app:layout_constraintTop_toTopOf="@+id/imagenCarretera"
            app:layout_constraintBottom_toBottomOf="@+id/imagenCarretera"
            android:padding="8dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="13pt"
            android:textStyle="bold" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>