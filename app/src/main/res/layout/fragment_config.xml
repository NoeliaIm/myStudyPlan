<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="15dp"
    tools:context=".ConfigFragment" >
    <TextView
        android:id="@+id/config_general"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Configuracion"
        style="@style/tituloConfig"/>

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        android:padding="10dp"
        app:cardBackgroundColor="#A2ADF3"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="8dp">

        <EditText
            android:id="@+id/asignatura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/asignatura"
            android:importantForAutofill="no"
            android:inputType="text"
            android:minHeight="48dp"
            tools:ignore="TextContrastCheck" />


        <Button
            android:id="@+id/btnAniadirAsignatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="170dp"
            android:layout_marginTop="08dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:background="@color/purple_700"
            android:onClick="aniadirAsignatura"
            android:text="@string/a_adir_asingatura"
            android:textColor="@color/white" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/config_dato_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edici_n_de_entradas"
        style="@style/tituloConfig"/>


    <TextView
        android:id="@+id/eliminarAsignatura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/eliminar_asignatura"
        style="@style/itemConfig"/>


    <TextView
        android:id="@+id/editarTema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/editar_tema"
        style="@style/itemConfig"/>

    <TextView
        android:id="@+id/eliminarTema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/eliminar_tema"
        style="@style/itemConfig"/>



</LinearLayout>